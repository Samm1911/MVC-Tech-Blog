<div class="card">
  <div class="card-header">
    Signup
  </div>
  <div class="card-body">
    <div class="row justify-content-center ">
      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username:</label>
          <input class="form-control" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn authbtn" type="submit">Sign Up!</button>
        </div>
      </form>
      <a href="/login" class="authlink">Login instead</a>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>